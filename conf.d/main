#!/bin/sh -ex

DB_NAME=ezpublish
DB_USER=ezpublish
DB_PASS=$(mcookie)

ADMIN_PASS=turnkey
ADMIN_MAIL=admin@example.com
DOMAIN=www.example.com

SRC=/usr/local/src
WEBROOT=/var/www/ezpublish

# tweak apache-credit
CONF=/etc/apache2/mods-available/substitute.conf
sed -i "s|</body>|</footer>|g" $CONF

# unpack and set permissions
tar -xf $SRC/ezpublish5_*.tar.gz -C $(dirname $WEBROOT)


mv $(dirname $WEBROOT)/ezpublish5_* $WEBROOT
rm $SRC/ezpublish5_*.tar.gz

chown -R root:root $WEBROOT
cd  $WEBROOT
chown -R www-data:www-data web

cd  $WEBROOT/ezpublish/
chown -R www-data:www-data cache logs config sessions

cd $WEBROOT/ezpublish_legacy/
chown -R www-data:www-data design extension settings var

# php.ini tweaks
PHPINI=/etc/php5/apache2/php.ini
sed -i "s|^memory_limit.*|memory_limit = 256M|" $PHPINI
sed -i "s|^;date.timezone.*|date.timezone = \"America/Los_Angeles\"|" $PHPINI

# configure apache
a2dissite default
a2ensite ezpublish
a2enmod rewrite

# start services
/etc/init.d/mysql start
/etc/init.d/apache2 start

# setup the database
MYSQL_BATCH="mysql --user=root --password=$MYSQL_PASS --batch"
MYSQL_ADMIN="mysqladmin --user=root --password=$MYSQL_PASS"

$MYSQL_ADMIN create $DB_NAME
$MYSQL_BATCH --execute "grant all privileges on $DB_NAME.* to $DB_USER@localhost identified by '$DB_PASS'; flush privileges;"

# preseed installation
cat >$WEBROOT/kickstart.ini<<EOF
[email_settings]
Continue=true
Type=mta

[database_choice]
Continue=true
Type=mysqli

[database_init]
Continue=true
Server=localhost
Port=3306
Database=$DB_NAME
User=$DB_USER
Password=$DB_PASS

[language_options]
Continue=true
Primary=eng-GB

[site_types]
Continue=true
Site_package=ezdemo_site

[site_access]
Continue=true
Access=url

[site_details]
Continue=true
Title=TurnKey Ez Publish
URL=http://$DOMAIN
Access=site
AdminAccess=site_admin
Database=ezpublish
DatabaseAction=remove

[site_admin]
Continue=true
FirstName=Admin
LastName=User
Email=$ADMIN_MAIL
Password=$ADMIN_PASS

[security]
Continue=true

[registration]
Continue=true
Comments=
Send=false
EOF

# setup local ez package archive for installation
mv $SRC/ezpublish $WEBROOT/
sed -i "s|127.0.0.1.*|127.0.0.1 localhost packages.ez.no|" /etc/hosts

# curl based install
URL="http://127.0.0.1/index.php"
CURL="curl -c /tmp/cookie -b /tmp/cookie"
$CURL $URL --data "eZSetupWizardLanguage=eng-GB&eZSetup_current_step=Welcome&eZSetup_next_button=Next+%3E"
rm -f /tmp/cookie
mv $WEBROOT/.htaccess_root $WEBROOT/.htaccess

# cleanup
rm $WEBROOT/kickstart.ini
rm -rf $WEBROOT/ezpublish
sed -i "s|127.0.0.1.*|127.0.0.1 localhost|" /etc/hosts

# secure sensitive files
chmod 640 $WEBROOT/settings/siteaccess/eng/site.ini.append.php
chmod 640 $WEBROOT/settings/siteaccess/site/site.ini.append.php
chmod 640 $WEBROOT/settings/siteaccess/site_admin/site.ini.append.php

# clear cache
cd $WEBROOT
su www-data -c "php5 bin/php/ezcache.php --clear-all --purge --no-colors"

# stop services
/etc/init.d/mysql stop
/etc/init.d/apache2 stop

